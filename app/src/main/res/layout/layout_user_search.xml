<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/search_profilePhoto"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.5dp"
            android:layout_marginBottom="5dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/relLayout1"
            android:layout_toRightOf="@id/search_profilePhoto"
            android:layout_alignTop="@+id/search_profilePhoto"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qsdsqd"
                    android:id="@+id/searchUsername"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchEmail"
                    android:textColor="@color/pamp"
                    android:text="qsdsqdqsd"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/searchUsername"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_plus"
                    android:background="@drawable/rounded_btn"
                    android:id="@+id/iv_add"
                    android:visibility="visible"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_checked_black"
                    android:background="@drawable/rounded_btn"
                    android:id="@+id/iv_added"
                    android:visibility="invisible"
                    />

            </RelativeLayout>




        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>