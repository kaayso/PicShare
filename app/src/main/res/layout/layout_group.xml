<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/group_photo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_groups"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_crown"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_crown"
            android:visibility="invisible"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/relLayout1"
            android:layout_toRightOf="@id/group_photo"
            android:layout_alignTop="@+id/group_photo"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M1 informatique"
                    android:id="@+id/group_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/group_name"
                    android:layout_marginLeft="20dp"
                    android:text="Ce groupe est dédié aux étudiants de master informatique"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_menu2"
                    android:id="@+id/iv_menu"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:visibility="visible"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_addPost"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Publier"
                    android:visibility="invisible"
                    android:textColor="@color/pamp"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_plus"
                    android:background="@drawable/rounded_blue_btn"
                    android:id="@+id/add_group"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_alignTop="@+id/group_name"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_checked_black"
                    android:background="@drawable/rounded_btn"
                    android:id="@+id/checked_group"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_alignTop="@+id/group_name"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_profil"
                    android:id="@+id/iv_users"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/description"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="1"
                    android:id="@+id/tv_nb_users"
                    android:layout_toRightOf="@+id/iv_users"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_alignBottom="@id/iv_users"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_alert"
                    android:id="@+id/iv_visibilityPublic"
                    android:layout_toRightOf="@+id/tv_nb_users"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:visibility="visible"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_pwd"
                    android:id="@+id/iv_visibilityPivate"
                    android:layout_toRightOf="@+id/tv_nb_users"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:visibility="invisible"/>

            </RelativeLayout>




        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>